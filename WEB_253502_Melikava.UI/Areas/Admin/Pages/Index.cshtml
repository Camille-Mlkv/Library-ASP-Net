@page
@model WEB_253502_Melikava.UI.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Collection</h1>
<a href="@Url.Page("/Create")" class="btn btn-primary">
    <i class="bi bi-plus"></i> Create
</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Автор</th>
            <th>Цена</th>
            <th>Картинка</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books.Items)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Description</td>
                <td>@book.Price.ToString("C")</td>
                <td>
                    <img src="@book.Image" alt="Картинка книги" style="max-width: 100px; max-height: 150px;" />
                </td>
                <td>
                    <div class="d-flex gap-2">
                        <a href="@Url.Page("/Edit", new { id = book.Id })" class="btn btn-primary d-flex align-items-center">
                            <i class="bi bi-pencil me-1"></i> Edit
                        </a>
                        <a href="@Url.Page("/Details", new { id = book.Id })" class="btn btn-info d-flex align-items-center">
                            <i class="bi bi-info-circle me-1"></i> Details
                        </a>
                        <a href="@Url.Page("/Delete", new { id = book.Id })" class="btn btn-danger d-flex align-items-center">
                            <i class="bi bi-trash me-1"></i> Delete
                        </a>
                    </div>
                </td>


            </tr>
        }
    </tbody>
</table>

<!-- Пагинация -->
<nav aria-label="Pagination">
    <ul class="pagination">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="?pageNumber=@(Model.CurrentPage - 1)">Предыдущая</a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a class="page-link" href="?pageNumber=@i">@i</a>
            </li>
        }

        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a class="page-link" href="?pageNumber=@(Model.CurrentPage + 1)">Следующая</a>
        </li>
    </ul>
</nav>